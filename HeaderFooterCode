  }

  .sticky {
    position: fixed;
    top: 0;
    width: 100%;
  }

  .sticky + .content {
    padding-top: 102px;
  }</style>
<div class="header" id="myHeader">
	<div class="row">
		<h2 class="col-xs-5 col-xs-offset-1">Order Online!</h2>
